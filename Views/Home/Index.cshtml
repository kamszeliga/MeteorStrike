                               break;
                           case 4: 
                            <td data-order="@item.TicketPriorityId"><span class="badge bg-danger text-uppercase">@item.TicketPriority.Name</span></td>
                               break;
                       }
                     <td><a asp-action="Edit" asp-route-id="@item.Id">@item.Title</a></td>
