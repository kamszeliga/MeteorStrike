@model MeteorStrike.Models.Ticket

@{
    ViewData["Title"] = "Delete";
}

<div class="container p-3">
<div class="row justify-content-center">
    <div class="col-6">
    <div class="card mt-5 mb-2 p-3" style="height: 300px;">
<div class="card-body">
    <h1>Archive</h1>
<h4 class="mt-3"><b>Are you sure you want to archive</b> @Html.DisplayFor(model => model.Title)?</h4>
<p>Only admins are able to unarchive archived tickets.</p>
</div>
<div class="text-end">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Archive" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>
</div>
</div>
</div>
</div>
</div>
