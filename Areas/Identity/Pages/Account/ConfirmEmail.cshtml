@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
    Layout = "_LayoutIdentity";
}
<div class="container p-3">
<div class="row">
    <div class="card mt-5 mb-2 p-3">
<h1>@ViewData["Title"]</h1>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="card">
    <div class="header">
        <p class="lead">@ViewData["Title"]</p>
    </div>
    <div class="body">
        <a class="btn btn-primary btn-lg btn-block" asp-area="Identity" asp-page="/Account/Login"><i class="fa fa sign-in"></i><span>Sign In</span></a>
    </div>
</div>
</div>
</div>
</div>